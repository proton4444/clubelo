{
  "buildCommand": "npm run build",
  "installCommand": "npm ci",
  "startCommand": "node dist/server-refactored.js",
  "env": {
    "NODE_ENV": "production",
    "PORT": "3001"
  },
  "functions": {
    "src/server-refactored.ts": {
      "memory": 1024,
      "maxDuration": 60
    }
  },
  "rewrites": [
    {
      "source": "/api/(.*)",
      "destination": "/api/$1"
    }
  ]
}
